mixin navbar(user)
  nav.navbar.navbar-expand.navbar-light.bg-light
    .collapse.navbar-collapse
      ul.navbar-nav.mr-auto
        li.nav-item
          if user
            a.nav-link(href="/portal/" + user.username) Home
          else 
            a.nav-link(href="/") Home
        if user
          li.nav-item
              a.nav-link(href="/portal/" + user.username + "/settings/account") Settings
    .navbar-right
      if user
        span.navbar-text Hello #{user.username}!
    .navbar-right
      if user
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href="/login") Login
          li.nav-item
            a.nav-link(href="/logout") Logout
      else 
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/signup") Sign up
          li.nav-item
            a.nav-link(href="/login") Login
          li.nav-item
            a.nav-link(href="/logout") Logout